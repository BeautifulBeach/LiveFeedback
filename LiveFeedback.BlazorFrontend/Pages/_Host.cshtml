@page "/"
@namespace LiveFeedback.BlazorFrontend.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Live Feedback</title>
    <base href="~/"/>
    <link rel="stylesheet" href="css/main.css"/>
</head>
<body>
<app>
    <component type="typeof(LiveFeedback.BlazorFrontend.Pages.Index)" render-mode="ServerPrerendered"/>
</app>
<script src="_framework/blazor.server.js"></script>
<style>
    :root {
        --text-color: white;
        --background-color-1: #2b2b2b;
        --slider-thumb-thickness: 2.5rem;
        --accent-color: rgb(32, 32, 224);
        --accent-color-transparent: rgba(46, 46, 223, 0.42);
    }


    * {
        box-sizing: border-box;
        font-family: Arial, Helvetica, sans-serif;
        -webkit-tap-highlight-color: transparent;
    }
    
    *:not(h1, h2, h3, h4, h5, h6) {
        font-size: 1rem;
    }

    body {
        background-color: var(--background-color-1);
        width: 100vw;
        height: 100dvh;
        margin: 0;
    }

    main {
        width: inherit;
        height: 100%;
        display: flex;
        flex-direction: column;
        color: var(--text-color);
        justify-content: center;
        align-items: center;

        .slider-box {
            display: flex;
            width: 100vw;
            height: inherit;
            justify-content: center;
            align-items: center;
        }

        .slider-value {
            position: fixed;
            bottom: 0.5rem;
            left: 0.5rem;
        }

        .exit-btn {
            position: fixed;
            bottom: 0.5rem;
            right: 0.5rem;
            border: 1px solid var(--accent-color);
            padding: 0.5rem 1rem;
            background-color: var(--accent-color-transparent);
            color: var(--text-color);
            border-radius: 5rem;
        }
    }

    /* Slider styling */

    #slider {
        /* Entfernt das native Styling bei den meisten Browsern */
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;

        /* Breite für den gesamten Slider */
        width: calc(100vw - 2rem);
        max-width: 60rem;

        /* Optionale Einstellungen für Höhe und Hintergrund */
        height: 1.5rem;
        background: linear-gradient(to right, blue, aqua, green, yellow, red);
        border-radius: 5rem;
        outline: none;
    }

    /* Styling für den Slider-Thumb in WebKit (Chrome, Safari) */
    #slider::-webkit-slider-thumb {
        -webkit-appearance: none;
        appearance: none;
        width: var(--slider-thumb-thickness);
        height: var(--slider-thumb-thickness);
        background: #fff;
        border: 2px solid #999;
        border-radius: 50%;
        cursor: pointer;
        margin-top: -4px; /* Um den Thumb mittig auf der Spur auszurichten */
    }

    /* Styling für den Slider-Thumb in Firefox */
    #slider::-moz-range-thumb {
        width: var(--slider-thumb-thickness);
        height: var(--slider-thumb-thickness);
        background: #fff;
        border: 2px solid #999;
        border-radius: 50%;
        cursor: pointer;
    }

    /* Styling der Slider-Spur in Firefox */
    #slider::-moz-range-track {
        width: 100%;
        height: 8px;
        background: linear-gradient(to left, red, yellow, green);
        border-radius: 5px;
    }

    #slider::-moz-range-track {
        background: transparent;
    }

    .lecture-grid {
        width: 100vw;
        justify-content: center;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 250px));
        grid-column-gap: 1rem;
        grid-auto-flow: row;
        grid-auto-columns: 1fr;
    }

    .lecture {
        background-color: var(--background-color-1);
        padding: 1rem;
        border-radius: 1rem;
        color: var(--text-color);
        border: 2px solid var(--text-color);
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        align-items: flex-start;
    }

    .bold {
        font-weight: bold;
    }
    
    .bold > span{
        font-weight: normal;
    }

</style>
</body>
</html>